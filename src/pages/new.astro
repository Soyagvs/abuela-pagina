---
import Layout from "../layouts/Layout.astro";
import newArray from "../db/new.json";
import CardNew from "../components/CardNew.astro";
---

<Layout
    title="Nuevos productos | semanales"
    description="En esta secci칩n encontrar치s los nuevos productos que se agreguen durante la semana"
>
    <main class="flex justify-center items-center mb-20 lg:mb-0 lg:h-[900px]">
        <div class="flex flex-col items-center mt-10 lg:-mt-40">
            <h2 class="text-[#BCA2F2] text-2xl">Agregados recientes</h2>
            <p class="text-2xl text-[#18181B] text-center mt-5 xs:w-[350px] lg:w-[500px]">
                En esta secci칩n se mostrar치n los productos agregados
                recientemente por semana.
            </p>
            <div class="grid xs:grid-cols-1 lg:grid-cols-3 gap-5 pt-10">
                {
                    newArray.map((item) => (
                        <CardNew
                            id={item.id}
                            title={item.title}
                            subtitle={item.subtitle}
                            price={item.price}
                            star={item.star}
                            img={item.img}
                            stock={item.stock}
                        />
                    ))
                }
            </div>
        </div>
    </main>
</Layout>
