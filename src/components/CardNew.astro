---
interface Props {
    title: string;
    price: number;
    star: number;
    img: number;
    id: number;
    subtitle: string;
    stock: boolean;
}
const { title, price, star, img, id, subtitle, stock } = Astro.props;
---

<div
    class="border-2 border-yellow-300 rounded-xl p-5 flex flex-col shadow-md shadow-gray-600"
>
    <div class="flex flex-col items-end">
        <span
            class="text-white bg-[#BCA2F2] rounded-full w-9 h-9 absolute flex text-center justify-center items-center"
            >{id}</span
        >
        <img
            src={`/img/new/new-${img}.webp`}
            alt="Image for example"
            class="w-60 h-60 rounded-xl"
            decoding="async"
            loading="lazy"
        />
    </div>
    <div class="flex flex-col mt-3">
        <h3 class="font-bold text-2xl">{title}</h3>
        <p>{subtitle}</p>
        <p class="font-semibold">{`$ ${price}`}</p>
    </div>
    <div class="flex justify-start items-center">
        <p class="text-blue-500 font-semibold"># Estado</p>
        <img
            src={`/img/star/star-${star}.png`}
            alt="Star to products"
            class="w-auto"
        />
    </div>
    <div class="flex justify-center items-center mt-3">
        <!-- Utilizando operador ternario para la condiciÃ³n -->
        {
            stock ? (
                <a
                    class="bg-yellow-300 w-32 h-10 rounded-lg flex justify-center items-center gap-2"
                    href={`https://wa.me/5491124613382?text=Hola%20quiero%20comprar%20el%20producto%20${id}%20ðŸ›’`}
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <img
                        src="/img/wsp-logo.webp"
                        alt="logo message."
                        class="w-5"
                    />
                    <p class="text-xs">Comprar</p>
                </a>
            ) : (
                <a class="bg-red-500 w-32 h-10 rounded-lg flex justify-center items-center gap-2">
                    Sin stock
                </a>
            )
        }
    </div>
</div>
